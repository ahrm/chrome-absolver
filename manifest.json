{
    "name": "Absolver",
    "description": "Absolving web pages from the sins of wretched web developers",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["activeTab", "scripting", "tabs"],
    "host_permissions":["http://*/", "https://*/"] ,
    "commands": {
      "absolve": {
        "suggested_key": {
          "default": "Ctrl+Shift+U"
        },
        "description": "Absolve the current tab"
      }
    },

    "icons": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
}
